@model IEnumerable<PoliziaMunicipaleApp.Models.Verbale>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">
        Nessun verbale trovato.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DataViolazione)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IndirizzoViolazione)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nominativo_Agente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataTrascrizioneVerbale)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Importo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DecurtamentoPunti)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Anagrafica.Cognome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoViolazione.Descrizione)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="row-@item.Idverbale">
                    <td>
                        @Html.DisplayFor(modelItem => item.DataViolazione)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IndirizzoViolazione)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nominativo_Agente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataTrascrizioneVerbale)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Importo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DecurtamentoPunti)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Anagrafica.Cognome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoViolazione.Descrizione)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.Idverbale">Edit</a>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Idverbale">Details</a>
                            <button class="btn btn-danger btn-sm" onclick="deleteRecord(@item.Idverbale)">Delete</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        function deleteRecord(id) {
            if (confirm('Sei sicuro di voler eliminare questo verbale?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Verbale")',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            $('#row-' + id).remove();
                        } else {
                            alert('Errore durante l\'eliminazione del record: ' + response.message);
                        }
                    },
                    error: function () {
                        alert('Errore durante l\'eliminazione del record.');
                    }
                });
            }
        }
    </script>
}

